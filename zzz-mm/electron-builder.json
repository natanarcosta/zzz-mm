{
  "appId": "com.natanarcosta.zzzmm",
  "productName": "ZZZ Mod Manager",
  "asar": true,

  "files": [
    "dist/browser/**/*",
    "main.js",
    "preload.js",
    "package.json",
    "!**/locales/**",
    "!**/*.map",
    "!**/*.ts"
  ],

  "extraResources": [
    {
      "from": "resources/unrar",
      "to": "unrar",
      "filter": ["unrar.exe"]
    }
  ],

  "asarUnpack": ["**/*.node", "**/unrar/**"],

  "directories": {
    "buildResources": "build"
  },

  "win": {
    "target": "nsis",
    "icon": "build/favicon.ico",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  }
}
